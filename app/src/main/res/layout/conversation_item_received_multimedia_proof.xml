<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conversation_proof_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/photo_icon"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_photo_camera_24"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_text"
        app:layout_constraintStart_toEndOf="@+id/photo_icon"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Taken: 12:59pm UTC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_photo_camera_24"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_text" />

    <TextView
        android:id="@+id/location_text"
        app:layout_constraintStart_toEndOf="@+id/location_icon"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/time_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Taken: 12:59pm UTC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/proof_icon"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_photo_camera_24"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_text" />

    <TextView
        android:id="@+id/proof_text"
        app:layout_constraintStart_toEndOf="@+id/photo_icon"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/location_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Taken: 12:59pm UTC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
